<?xml version="1.0" encoding="utf-8"?>
<com.common.common.ui.widget.Scrolling.MixScroll.MixScrolling xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mixscroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/floor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/floor2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg" />
    </FrameLayout>

    <com.common.common.ui.widget.DecorateView.DecorateView
        android:id="@+id/decorate"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:tag="scroll"
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </com.common.common.ui.widget.DecorateView.DecorateView>

</com.common.common.ui.widget.Scrolling.MixScroll.MixScrolling>